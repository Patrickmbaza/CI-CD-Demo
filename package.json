{
  "name": "ci-cd-demo",
  "version": "1.0.0",
  "description": "CI/CD Pipeline Demo",
  "homepage": "https://patrickmbaza.github.io/CI-CD-Demo",
  "scripts": {
    "lint": "npx eslint src/ --ext .js",
    "test": "npx jest",
    "build": "mkdir -p dist && cp -r src/* dist/ 2>/dev/null || echo 'Build complete'"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/*.test.js"],
    "testPathIgnorePatterns": ["/dist/", "/node_modules/"],
    "roots": ["<rootDir>/src"],
    "moduleFileExtensions": ["js", "json"],
    "transform": {}
  }
}