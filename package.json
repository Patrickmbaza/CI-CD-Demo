{
  "name": "ci-cd-demo",
  "version": "1.0.0",
  "description": "CI/CD Pipeline Demo",
  "homepage": "https://patrickmbaza.github.io/CI-CD-Demo",
  "scripts": {
  "lint": "npx eslint src/ --ext .js --max-warnings 0",
  "test": "npx jest --coverage",
  "build": "mkdir -p dist && cp -r src/* dist/ && echo 'ðŸš€ Build complete! Ready for deployment.'",
  "predeploy": "npm run build",
  "deploy": "gh-pages -d dist"
},
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": ["**/*.test.js"],
    "testPathIgnorePatterns": ["/dist/", "/node_modules/"],
    "roots": ["<rootDir>/src"],
    "moduleFileExtensions": ["js", "json"],
    "transform": {}
  }
}